@model IEnumerable<MyClass.Models.Post>
@{
    ViewBag.Title = "Thùng rác trang";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section header {
    <link href="~/Public/css/jquery.dataTables.min.css" rel="stylesheet" />
}
@section footer {
    <script src="~/Public/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Main content -->
    <section class="content my-3">
        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-6">
                        <strong>THÙNG RÁC TRANG</strong>
                    </div>
                    <div class="col-md-6 text-right">
                        <a href="@Url.Action("Index","Page")" class="btn btn-sm btn-info"><i class="fas fa-long-arrow-alt-left"></i> Về danh sách</a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                @Html.Partial("Message")
                <table class="table table-bordered table-striped" id="myTable">
                    <thead>
                        <tr>
                            <th class="text-center" style="width:20px">#</th>
                            <th>Tiêu đề</th>
                            <th>Chi tiết</th>
                            <th>Từ khóa</th>
                            <th>Tổng quan</th>
                            <th>Slug</th>
                            <th>Ngày tạo</th>
                            <th class="text-center" style="width:310px">Chức năng</th>
                            <th class="text-center" style="width:20px">ID</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td><input type="checkbox" name="checkId" value="" /></td>
                            <td>@item.Title</td>
                            <td>@item.Detail</td>
                            <td>@item.MetaKey</td>
                            <td>@item.MetaDesc</td>
                            <td>@Html.DisplayFor(modelItem => item.Slug)</td>
                            <td>@Html.DisplayFor(modelItem => item.CreatedAt)</td>
                            <td>
                                <a href="@Url.Action("Retrash","Page", new { id = item.Id })" class="btn btn-sm btn-info"><i class="fas fa-undo-alt"></i> Khôi phục</a>
                                <a href="@Url.Action("Delete","Page", new { id = item.Id })" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i> Xóa vĩnh viễn</a>
                            </td>
                            <td>@item.Id</td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
