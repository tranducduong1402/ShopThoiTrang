@model IEnumerable<MyClass.Models.Supplier>

@{
    ViewBag.Title = "Tất cả nhà cung cấp";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@section header {
    <link href="~/Public/css/jquery.dataTables.min.css" rel="stylesheet" />    
}
@section footer {
    <script src="~/Public/js/jquery.dataTables.min.js"></script>    
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Main content -->
    <section class="content my-3">
        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-6">
                        <strong>TẤT CẢ NHÀ CUNG CẤP</strong>
                    </div>
                    <div class="col-md-6 text-right">
                        <a href="@Url.Action("Create","Supplier")" class="btn btn-sm btn-success"><i class="fas fa-plus"></i> Thêm</a>
                        <a href="@Url.Action("Trash","Supplier")" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i> Thùng rác</a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                @Html.Partial("Message")
                <table class="table table-bordered table-striped" id="myTable">
                    <thead>
                        <tr>
                            <th class="text-center" style="width:20px">#</th>
                            <th class="text-center" style="width:50px">Hình</th>
                            <th>Tên nhà cung cấp</th>
                            <th>Điện thoại</th>
                            <th>Email</th>
                            <th>Địa chỉ</th>
                            <th>Ngày tạo</th>
                            <th class="text-center" style="width:310px">Chức năng</th>
                            <th class="text-center" style="width:20px">ID</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td><input type="checkbox" name="checkId" value="" /></td>
                            <td>
                                <img src="~/Public/images/suppliers/@item.Img" class="img-fluid" alt="Img" />
                            </td>
                            <td>@item.Name</td>
                            <td>@item.Phone</td>
                            <td>@item.Email</td>
                            <td>@item.Address</td>
                            <td>@Html.DisplayFor(modelItem => item.CreatedAt)</td>
                            <td>
                                @if (item.Status == 1)
                                {
                                    <a href="@Url.Action("Status","Supplier", new { id = item.Id })" class="btn btn-sm btn-success"><i class="fas fa-toggle-on"></i> Trạng thái</a>
                                }
                                else
                                {
                                    <a href="@Url.Action("Status","Supplier", new { id = item.Id })" class="btn btn-sm btn-danger"><i class="fas fa-toggle-off"></i> Trạng thái</a>
                                }
                                <a href="@Url.Action("Details","Supplier", new { id = item.Id })" class="btn btn-sm btn-primary"><i class="fas fa-eye"></i> Xem</a>
                                <a href="@Url.Action("Edit","Supplier", new { id = item.Id })" class="btn btn-sm btn-info"><i class="fas fa-edit"></i> Sửa</a>
                                <a href="@Url.Action("DelTrash","Supplier", new { id = item.Id })" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i> Xóa</a>
                            </td>
                            <td>@item.Id</td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->          
        </div>
        <!-- /.card -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->


